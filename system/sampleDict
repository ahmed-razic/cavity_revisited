FoamFile
{
    format          ascii;
    class           dictionary;
    location        "system";
    object          sampleDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type        sets;

libs        ("libsampling.so");

setFormat   raw;

interpolationScheme cellPointFace;

fields
(
    U
    //p
);

sets
(
    lineX
    {
        type        lineCells;
        axis        x;
        start       (-1 0.5 0);
        end         (2 0.5 0);
    }

    lineY
    {
        type        lineCells;
        axis        y;
        start       (0.5 -1 0);
        end         (0.5 2 0);
    }
);

